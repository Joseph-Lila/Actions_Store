<Actions>:
    actions_list: actions_list

    MDBoxLayout:
        orientation: 'vertical'

        MDToolbar:
            title: "Actions Manager"
            md_bg_color: [.8, 0, 0, .7]
            elevation: 50
            right_action_items: [["swap-horizontal", lambda x: root.swap_actions()], ["plus", lambda x: root.add_action()], ["minus", lambda x: root.remove_actions()], ["door", lambda x: root.go_back()]]

        BoxLayout:
            size_hint: 1, 1

            ScrollView:

                bar_color: 0, 0, 255, 1
                bar_width: 12

                MDList:
                    id: actions_list

<Schedule>
    MDBoxLayout:
        orientation: 'vertical'

        MDToolbar:
            title: "Schedule Manager"
            md_bg_color: [.8, 0, 0, .7]
            elevation: 50
            right_action_items: [["door", lambda x: root.go_back()]]

        BoxLayout:
            size_hint: 1, 1

            GridLayout:
                rows: None
                cols: 1
                spacing: 100
                padding: 100

                Button:
                    text: "Today"
                    text_color: 0, 0, 1, 1
                    font_size: '25sp'
                    pos_hint: {"center_x": .5, "center_y": .5}
                    background_color: 0, 0, 0, 0
                    canvas.before:
                        Color:
                            rgba: (.8, 0, 0, .7) if self.state=='normal' else (0, .7, .7, 1)
                        RoundedRectangle:
                            pos: self.pos
                            size: self.size
                            radius: [35,]
                    on_press:
                        app.root.current = 'today'

                Button:
                    text: "Time Manager"
                    text_color: 0, 0, 1, 1
                    font_size: '25sp'
                    pos_hint: {"center_x": .5, "center_y": .5}
                    background_color: 0, 0, 0, 0
                    canvas.before:
                        Color:
                            rgba: (.8, 0, 0, .7) if self.state=='normal' else (0, .7, .7, 1)
                        RoundedRectangle:
                            pos: self.pos
                            size: self.size
                            radius: [35,]
                    on_press:
                        app.root.current = 'time_manager'

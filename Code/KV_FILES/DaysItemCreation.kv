<DaysItemCreation>:
    spinner: spinner
    start: start
    finish: finish

    MDBoxLayout:
        orientation: 'vertical'

        MDToolbar:
            title: "Days Item Creation"
            md_bg_color: [.8, 0, 0, .7]
            elevation: 50
            right_action_items: [["check-circle-outline", lambda x: root.create_days_item()], ["door", lambda x: root.go_back()]]

        BoxLayout:
            size_hint: 1, 1

            GridLayout:
                cols: 1
                rows: None
                spacing: 50
                padding: 50

                Label:
                    font_size: '30sp'
                    text: "Start"
                    color: 1, 0, 0, 1
                    size_hint: 1, .5
                    multiline: False

                MDTextField:
                    id: start
                    font_size: '30sp'
                    color: 1, 0, 0, 1
                    helper_text: "Great!"
                    helper_text_mode: "on_focus"
                    auto_indent: True
                    write_tab: False

                Label:
                    font_size: '30sp'
                    text: "Finish"
                    color: 1, 0, 0, 1
                    size_hint: 1, .5
                    multiline: False

                MDTextField:
                    id: finish
                    font_size: '30sp'
                    color: 1, 0, 0, 1
                    helper_text: "Great!"
                    helper_text_mode: "on_focus"
                    auto_indent: True
                    write_tab: False

                Label:
                    font_size: '30sp'
                    color: 1, 0, 0, 1
                    size_hint: 1, .5
                    text: "Department"

                Spinner:
                    id: spinner
                    pos_hint: {'center': (.5, .5)}
                    background_color: 0, 0, 1, .7
                    font_size: '30sp'
                    sync_height: True
                    text_autoupdate: True
